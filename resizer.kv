
FloatLayout:

	Label:
		text:"EMT IMAGE THUMBNAIL CREATOR"
		pos_hint:{"top":1.4,"right":1.05}

	Label:
		text:"Width"
		pos_hint:{"top":1.3,"right":0.7}

	TextInput:
		id: width_input
		size_hint_y: 0.05
		size_hint_x: 0.3
		pos_hint:{"top":0.825,"right":0.7}

	Label:
		text:"Height"
		pos_hint:{"top":1.2,"right":0.7}

	TextInput:
		id: height_input
		size_hint_y: 0.05
		size_hint_x: 0.3
		pos_hint:{"top":0.725,"right":0.7}

	Button:
		text: "CHOOSE IMAGE"
		size_hint_y: .05
		size_hint_x: .2
		pos_hint:{"top":0.525,"right":0.65}
		on_press: app.loadfile()
	Button:
		text: "RESIZE"
		size_hint_y: .05
		size_hint_x: .2
		pos_hint:{"top":0.425,"right":0.65}
		on_press: app.resizeimage()

	Button:
		text: "EXIT"
		size_hint_y: .05
		size_hint_x: .2
		pos_hint:{"top":0.325,"right":0.65}
		on_press: app.closeapp()